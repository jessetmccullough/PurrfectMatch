<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>PurrfectMatch</h1>
      <p>
        Here is a handful of our most recent additions looking for their perfect
        human companion
      </p>
      <p><a class="btn btn-primary btn-large" href="/cats/new">Add A Cat</a></p>
    </div>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% cats.forEach(function(cat) { %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <a href="/cats/<%= cat._id %>">
          <img src="<%= cat.image %>" />
        </a>
        <div class="caption">
          <h4><%= cat.name %></h4>
          <p><%= cat.age %></p>
          <p><%= cat.sex %></p>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<% include ../partials/footer %>
